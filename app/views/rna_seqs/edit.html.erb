<% content_for :top_bar do -%>
  <h1 class="pagetitle">Edit mRNA-Seq Sample <%= @rna_seq.name %></h1>
<% end -%>

<% content_for :item_bar do -%>
  <% if can? :delete, @rna_seq %>
    <% #TODO: Change remove buttons to red style %>
    <%= link_to "Remove RNA-Seq", @rna_seq, :method => 'delete', :class => "button", :confirm => "Remove sample: #{@rna_seq.name}? \n This CANNOT be undone." %>
  <% end %>
  <%= link_to "Cancel", @rna_seq, :style => "float:right", :class => "button"%>
<% end -%>

<%= render :partial => "samples/sidebar" %>

<%= error_messages_for :rna_seq %>

<%= render :partial => 'samples/form', :locals => {:sample => @rna_seq} %>