xml.instruct! :xml, :version  => "1.0", :encoding  => "UTF-8"
xml.chart do
  be = @rna_seq.bioentries_experiments.where(:bioentry_id => @bioentry.id).first
  bioentry = be.bioentry
  bc = bioentry.length
  num=400
  @rna_seq.summary_data(0,bioentry.length,num,be.sequence_name).each_with_index do |n,idx|
    xml.linedata(:x => (idx*(bc/num)).ceil, :y => n)
  end
  # @rna_seq.peaks.with_bioentry(bioentry.id).each do |p|
  #   xml.pointdata(:x => p.pos, :y => p.val)
  # end
end