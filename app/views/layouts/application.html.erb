<!DOCTYPE html>
<html>
<head>
    <title>Genome Suite</title>
    <!-- <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" /> -->
		<%= csrf_meta_tag %>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
</head>
<body>
    <div id="main">
        <div id="header">
            <%= link_to "GLBRC Genome Suite", "gs.glbrc.org", :style => 'color:darkorange;font-size:200%'%>
						<!-- <a href="#" class="logo"><img src="img/logo.gif" width="101" height="29" alt="" /></a> -->
						<%= application_top_navbar_items %>
        </div>
        <div id="middle">
						<% # the sidebar is only rendered if it has data %>
						<% sidebar_data = yield :sidebar %>
						<% unless sidebar_data.blank? %>
            	<div id="left-column">
	               <%= sidebar_data %> 
	            </div>
						<% end %>
						<% # expand the div width if sidebar is not present %>
            <div id="center-column" <%= "style='width:91%;margin-top:-10px;'" if sidebar_data.blank? %>>
								<% top_bar_data = yield :top_bar %>
								<% unless top_bar_data.blank? %>
								<div class="top-bar">
									<%= top_bar_data %>
                </div>
								<% end %>
								<% select_bar_data = yield :select_bar %>
								<% unless select_bar_data.blank? %>
									<div class="select-bar">
										<%= select_bar_data %>
	                </div>
								<% end %>
								<%= yield  %> 
            </div>
        </div>
        <div id="footer"><p>Â©2011 <%= link_to "Great Lakes Bioenergy Research Center", "http://glbrc.org" %></p></div>
    </div>
</body>
</html>