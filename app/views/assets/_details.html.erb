<div class="asset_green" style="color:black;">
	<div style="font-size:133%;padding-bottom:1em"><b><%= asset.class.name %></b></div>
	<div style="padding-left:1em">
			<p>
				<b><i><%= asset.filename %></i></b>
			</p>
			<p>
				<b>Size:</b>
				<%= number_to_human_size(asset.data_file_size) %>
			</p>
			<% if(asset.file_details) %>
			  <p>
			    <%= asset.file_details %>
			  </p>
			<% end %>
			<% if asset.state != 'complete' %>
  		<p>
  			<b><span style="color:darkblue"><%= asset.state %></span></b>		
  		</p>
  		<% end %>
	</div>
</div>