<h1>Edit Role: <%= @role.name %></h1>

<% form_for(@role, :url => {:action => "update"}, :html => {:class => 'contactform'}) do |f| -%>
  <%= f.error_messages %>

  <%= render :partial => "form", :locals => {:f => f} %>
  
  <p><%= submit_tag 'Edit' %> or
  <%= link_to 'Cancel', admin_roles_path %></p>
<% end -%>

<% content_for :sidebar do -%>
  <%= render :partial => "admin/sidebar" %>
<% end %>