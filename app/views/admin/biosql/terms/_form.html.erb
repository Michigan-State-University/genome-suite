<%= semantic_form_for [:admin,@term] do |f| %>
  <%= f.inputs do %>
    <%= f.input :ontology %>
    <%= f.input :name %>
    <%= f.input :identifier %>
    <%= f.input :definition %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>