<h1>Edit User: <%=h @user.login %></h1>
<% content_for :sidebar do -%>
  <%= render :partial => "admin/sidebar" %>
<% end %>
<% @user.password = @user.password_confirmation = nil %>

<% form_for(@user, :url => {:action => 'update'}, :html => {:class => 'contactform'}) do |f| -%>
  <%= f.error_messages %>

  <%= render :partial => "form", :locals => {:f => f} %>
  
  <p><%= submit_tag 'Edit' %> or
  <%= link_to 'Cancel', admin_users_path %></p>
<% end -%>