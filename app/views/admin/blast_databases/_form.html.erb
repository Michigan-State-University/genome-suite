<%= semantic_form_for [:admin,@blast_database] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :filepath %>
    <%= f.input :description %>
    <%= f.input :link_ref %>
    <%= f.input :taxon_id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link, :label => 'Cancel' %>
  <% end %>
<% end %>