<%= link_to 'Select All','#', :onclick => 'jQuery(".exp_check").attr("checked", true );' %>
|<%= link_to 'Select None','#', :onclick => 'jQuery(".exp_check").attr("checked", false );' %>

<%= form_tag expression_results_path, :method => :get do %>
<%= hidden_field_tag :assembly_id, assembly.try(:id) %>
<%= hidden_field_tag :type_term_id, type_term_id %>
<div style="width:25em">
  <dl style="font-weight:bold;">
    <span style="float:left">Experiment</span>
    <span style="float:right">Mapped Fragments</span>
  </dl>
  <% experiment_options.each do |experiment| %>
    <div style="clear:both;">
    	<span style="float:left">
    		<%= check_box_tag "experiments[]", experiment.id, (params[:experiments] && params[:experiments].include?(experiment.id.to_s)), :class => 'exp_check'  %> 
    		<%= experiment.name %>
    	</span>
    	<span style="float:right"><%= number_with_delimiter(
    	  experiment.total_mapped_reads
    	) %></span>
    </div>
  <% end %>
  <hr/ style="clear:both">
  <br/>
  <%= submit_tag 'Submit', :style => "float:right"%>
</div>
<% end -%>