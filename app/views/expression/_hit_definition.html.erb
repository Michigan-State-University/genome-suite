<%=
if multi_definition_type
  sliced_toggle(
    multi_definition_type.collect{|definition|
      highlight_result(hit,definition+'_text')
    }.join(' | ').html_safe,
    multi_definition_type.collect{|definition|
      Array(hit.stored(definition+'_text')).first
    }.join(' | '),
    Array(hit.stored(:id)).first
  )
else
  hit.stored(definition_type+'_text') ? sliced_toggle(
      highlight_result(hit,definition_type+'_text'),
      Array(hit.stored(definition_type+'_text')).first||'',
      Array(hit.stored(:id)).first
    ) : ''
end %>