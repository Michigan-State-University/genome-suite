<% content_for :top_bar do -%>
  <h1 class="pagetitle">Edit ChIP Chip Sample <%= @chip_chip.name %></h1>
<% end -%>

<% content_for :item_bar do -%>
  <%= link_to "Cancel", @chip_chip, :style => "float:left", :class => "button"%>
  <% if can? :delete, @chip_chip %>
    <%= render :partial => 'shared/item_bar_toggle' %>
    <!-- Advanced Options -->
    <div style="display:none;clear:both;float:left" id="advanced_search">
      <br/>
      <%= link_to "Remove ChIP-Chip", @chip_chip, :method => 'delete', :class => "redbutton", :confirm => "Remove sample: #{@chip_chip.name}? \n This CANNOT be undone." %>
    </div>
  <% end %>
<% end -%>

<%= render :partial => "samples/sidebar" %>

<%= error_messages_for :chip_seq %>

<%= render :partial => 'samples/form', :locals => {:sample => @chip_chip} %>