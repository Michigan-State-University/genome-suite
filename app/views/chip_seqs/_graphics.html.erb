<% content_for :head do %>
	<%= render :partial => "common/extjs" %>
	<%= render :partial => "common/extjs_css_gray" %>
<% end %>

<div id="graphics_container">
  <%= render :partial => 'biosql/bioentries/form_select', :locals => {:reload_path => url_for(@chip_seq), :bioentry => @bioentry} %>
  View this in <%= link_to "Sequence Viewer", bioentry_path(@bioentry, :tracks => [@chip_seq.assembly.tracks.first.id]) %>
  <div id='exp_chart'>
  	<%= swf_tag "mixed_plot.swf", 
  		:id => "#{@chip_seq}_plot", 
  		:size => "600x300", 
  		:flashvars => {
  			:checklabel => "Show Peaks", 
  			:pointseries => "Peaks", 
  			:lineseries => "Tag Count",
  			:entry_id => @bioentry.id,
  			:id => @chip_seq.id, 
  			:local_url => "#{root_path}chip_seqs/"
  		} %>
  </div>
</div>