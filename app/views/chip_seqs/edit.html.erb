<h1 class="pagetitle">Edit Chip Seq Experiment <%= @chip_seq.name %></h1>
<%= render :partial => "experiments/sidebar" %>
<%= error_messages_for :chip_seq %>

<% form_for @chip_seq do |f| %>
	<%= render :partial => 'experiments/form', :locals => {:f => f} %>
	<br/>
	<%= render :partial => 'experiments/file_form', :locals => {:f => f} %>	
	<div style="clear:both">
		<br/>
		<hr/>
	</div>
	<br/>
	<br/>
	<%= f.submit %>
<% end %>
<%= link_to "Cancel", @chip_seq, :style => "float:right", :class => "button"%>