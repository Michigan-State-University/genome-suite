<% content_for :top_bar do -%>
  <h1 class="pagetitle">Edit Chip Seq Sample <%= @chip_seq.name %></h1>
<% end -%>

<% content_for :item_bar do -%>
  <% if can? :delete, @chip_seq %>
    <% #TODO: Change remove buttons to red style %>
    <%= link_to "Remove ChIP-Seq", @chip_seq, :method => 'delete', :class => "button", :confirm => "Remove sample: #{@chip_seq.name}? \n This CANNOT be undone." %>
  <% end %>
  <%= link_to "Cancel", @chip_seq, :style => "float:right", :class => "button"%>
<% end -%>

<%= render :partial => "samples/sidebar" %>

<%= error_messages_for :chip_seq %>

<%= render :partial => 'samples/form', :locals => {:sample => @chip_seq} %>
