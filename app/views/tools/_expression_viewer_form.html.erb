<% form_tag expression_results_tools_path, :method => :get do %>
<%= hidden_field_tag :taxon_version_id, params[:taxon_version_id] %>
<div style="width:25em">
  <dl style="font-weight:bold;">
    <span style="float:left">Experiment</span>
    <span style="float:right">Mapped Fragments</span>
  </dl>
  <% @experiment_options.each do |experiment| %>
    <div style="clear:both;">
    	<span style="float:left">
    		<%= check_box_tag "experiments[]", experiment.id, (params[:experiments] && params[:experiments].include?(experiment.id.to_s))  %> 
    		<%= experiment.name %>
    	</span>
    	<span style="float:right"><%= number_with_delimiter( experiment.feature_counts.sum(:count) ) %></span>
    </div>
  <% end %>
  <hr/ style="clear:both">
  <br/>
  <%#= link_to "advanced query", advanced_expression_viewer_tools_path(:taxon_version_id => @taxon_version.id), :style => "float:left" %>
  <%= submit_tag 'Submit', :style => "float:right"%>
</div>
<% end -%>