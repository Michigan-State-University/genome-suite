xml.instruct! :xml, :version  => "1.0", :encoding  => "UTF-8"
xml.chart do
  c_item = @re_seq.concordance_items.where(:bioentry_id => @bioentry.id).first
  bioentry = c_item.bioentry
  bc = bioentry.length
  num=400
  @re_seq.summary_data(0,bioentry.length,num,c_item.reference_name).each_with_index do |n,idx|
    xml.linedata(:x => (idx*(bc/num)).ceil, :y => n)
  end
end