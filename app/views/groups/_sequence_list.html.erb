<% if group.assemblies.empty? %>
  No sequence has been assigned to this group
<% else %>
  <div class="table">
    <table class="listing">
      <thead>
        <th>Species</th>
        <th>Taxon</th>
        <th>Version</th>
        <th>Options</th>
      </thead>
      <% group.assemblies.each do |tv| %>
        <tr>
          <td><%= tv.species.name%></td>
          <td><%= tv.taxon.name %></td>
          <td><%= tv.version %></td>
          <td>
            <%= link_to "Explore #{tv.bioentries.count } entries", bioentries_path(:assembly =>tv.id) %>
				    |
				    <%= link_to "View First entry", tv.bioentries.first%>
				    <% if tv.has_expression? %>
				      |
				      <%= link_to "Expression", expression_viewer_path(:assembly_id => tv.id) %>
				    <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>