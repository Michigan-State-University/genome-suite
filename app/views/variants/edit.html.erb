<h1 class="pagetitle">Edit Variant Experiment <%= @variant.name %></h1>
<%= render :partial => "experiments/sidebar" %>
<%= error_messages_for :variant %>

<% form_for @variant, :html => {:multipart => true} do |f| %>
	<%= render :partial => 'experiments/form', :locals => {:f => f} %>
	<br/>
	<%= render :partial => 'experiments/file_form', :locals => {:f => f, :types => {"MAQ snp" => "MaqSnp", "MAQ indel" => "MaqIndel"}} %>	
	<div style="clear:both">
		<br/>
		<hr/>
	</div>
	<br/>
	<br/>
	<%= f.submit %>
<% end %>

<%= link_to "Cancel", variants_path, :style => "float:right", :class => "button" %>
