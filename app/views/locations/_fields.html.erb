<ul class="nested-fields">
	<% show_strand ||= nil %>
	<%= f.inputs do %>
		<%= f.input :start_pos %>
		<%= f.input :end_pos %>
		<%= f.select :strand, {"5'<-3'" => -1,"5'->3'" => 1} if show_strand %>
		<%= f.hidden_field :id, :value => f.object.id unless f.object.new_record? %>
		<%= link_to_remove_fields image_tag("delete.png",:alt => "Remove Location"), f%>
	<% end %>
</ul>